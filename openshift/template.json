{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "filestore",
    "annotations": {
      "description": "An example Java application with no database",
      "tags": "instant-app,java,filestore"
    }
  },
  "labels": {
    "template": "filestore"
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "filestore",
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "api",
            "port": 80,
            "targetPort": 10000
          }
        ],
        "selector": {
          "name": "filestore"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "filestore",
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "java-gradle-sti"
      },
      "spec": {
        "dockerImageRepository": "tebro/java-gradle-sti"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "filestore",
        "annotations": {
          "description": "Defines how to build the application"
        }
      },
      "spec": {
        "source": {
          "type": "Source",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          },
          "contextDir": "${CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "java-gradle-sti:latest"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "filestore:latest"
          }
        },
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "filestore",
        "annotations": {
          "description": "Defines how to deploy the application server"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "filestore"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "filestore:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "filestore"
        },
        "template": {
          "metadata": {
            "name": "filestore",
            "labels": {
              "name": "filestore"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "filestore",
                "image": "filestore",
                "ports": [
                  {
                    "containerPort": 10000
                  }
                ],
                "env": [
                  {
                    "name": "STORAGE_BACKEND",
                    "value": "${STORAGE_BACKEND}"
                  },
                  {
                    "name": "STORAGE_FILE_PATH",
                    "value": "${STORAGE_FILE_PATH}"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "SOURCE_REPOSITORY_URL",
      "description": "The URL of the repository with your application source code",
      "value": "https://github.com/Tebro/FileStore"
    },
    {
      "name": "SOURCE_REPOSITORY_REF",
      "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch",
      "value": "master"
    },
    {
      "name": "CONTEXT_DIR",
      "description": "Set this to the relative path to your project if it is not in the root of your repository"
    },
    {
        "name": "STORAGE_BACKEND",
        "value": "memory",
        "description": "Which supported storage backend do you want to use?",
        "required": true
    },
    {
        "name": "STORAGE_FILE_PATH",
        "description": "The path in the filesystem where the data should be stored if STORAGE_BACKEND 'file' is used",
        "value": "/filestore",
        "required": true
    }
  ]
}
